# {{ service_name }} Agent Container
# Generated by Service Template Generator - Agent-Controller Pattern

FROM {{ backend_runtime_slim }}

# Install system dependencies for privileged operations
RUN apt-get update && apt-get install -y \
    curl \
    procps \
    util-linux \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy agent application
COPY agent.py .

# Create non-root user (but agent may need to run privileged)
RUN useradd --create-home --shell /bin/bash {{ service_name_snake }}

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV AGENT_ID="{{ service_name_kebab }}-agent"
{% if enable_oauth -%}
ENV OAUTH_ISSUER="{{ oauth_issuer }}"
ENV OAUTH_CLIENT_ID="{{ oauth_client_id }}"
{% endif -%}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Labels
LABEL maintainer="GokCloud Team"
LABEL service.name="{{ service_name }}"
LABEL service.component="agent"
LABEL service.version="{{ version }}"
LABEL service.pattern="agent-controller"

# Switch to non-root user (override in deployment if privileged access needed)
USER {{ service_name_snake }}

# Run the agent
CMD ["python", "agent.py"]