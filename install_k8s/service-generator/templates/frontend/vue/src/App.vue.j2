<template>
  <div id="app">
    <header class="app-header">
      <h1>{{ serviceName }}</h1>
      <nav>
        <ul>
          <li><a href="#home">Home</a></li>
          <li><a href="#about">About</a></li>
        </ul>
      </nav>
    </header>
    
    <main class="main-content">
      <section class="hero">
        <h2>Welcome to {{ serviceName }}</h2>
        <p>{{ description }}</p>
        <button @click="fetchData" class="btn-primary">Get Started</button>
      </section>
      
      <section v-if="apiResponse" class="api-response">
        <h3>API Response:</h3>
        <pre>{{ "{{ JSON.stringify(apiResponse, null, 2) }}" }}</pre>
      </section>
    </main>
    
    <footer class="app-footer">
      <p>&copy; 2024 {{ serviceName }} - Version {{ version }}</p>
    </footer>
  </div>
</template>

<script>
import axios from 'axios'

export default {
  name: 'App',
  data() {
    return {
      serviceName: '{{ service_name_camel }}',
      description: '{{ description }}',
      version: '{{ version }}',
      apiResponse: null
    }
  },
  methods: {
    async fetchData() {
      try {
        const response = await axios.get('/api')
        this.apiResponse = response.data
      } catch (error) {
        console.error('Error fetching data:', error)
        this.apiResponse = { error: 'Failed to fetch data' }
      }
    }
  }
}
</script>

